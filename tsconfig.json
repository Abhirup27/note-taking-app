{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/express"  // Point to your custom types directory
    ],
    "types": ["node", "express"],
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "src/types/express.d.ts"],
  "exclude": ["node_modules"]
}
